<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/a1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/burgerpng"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/a2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:background="@drawable/momospng"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/a3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/burger2png"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/a4"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/pizzapng"
        />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_below="@id/a1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Burger"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_marginLeft="250dp"
        android:layout_below="@id/a2"
        android:text="momos"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_height="30dp"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_below="@id/a3"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="burger22"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_marginLeft="250dp"
        android:layout_below="@id/a4"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="pizza"
        android:textSize="20dp"
        android:id="@+id/w3"
        android:textColor="@color/black"
        />
    <ImageView
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_below="@id/w3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/noodelspng"
        />
</RelativeLayout>